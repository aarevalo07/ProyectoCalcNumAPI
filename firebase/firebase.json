{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [{
      "source": "/api/**",
      "headers": [
        {"key": "Access-Control-Allow-Origin", "value": "*"},
        {"key": "Content-Type", "value": "application/json"}
      ]
    }]
  }
}
